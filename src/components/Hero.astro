---
import { Command } from '@lucide/astro';
---

<section id="hero" class="hero">
  <div class="hero-content">
    <div class="hero-name-wrapper">
      <h1 class="hero-name">Diogo Reus</h1>
      <div class="hero-title-bar">
        <span class="hero-title">Designer</span>
        <span class="hero-separator">·</span>
        <span class="hero-title">Developer</span>
        <span class="hero-separator">·</span>
        <span class="hero-title">Executive</span>
        <span class="hero-separator">·</span>
        <span class="hero-title">AI Builder</span>
      </div>
    </div>

    <p class="hero-tagline">
      15+ years transforming education through technology.<br />
      From Flash animations to GPT-5 pipelines.
    </p>

    <!-- Command palette hint -->
    <button class="cmd-k-hint" id="cmd-k-trigger" aria-label="Open command palette">
      <Command size={14} />
      <kbd>K</kbd>
      <span class="hint-label">Quick navigation</span>
    </button>

    <div class="hero-cta">
      <a href="#era-flash" class="cta-button">
        <span class="cta-text">Explore the Journey</span>
        <span class="cta-arrow">↓</span>
      </a>
    </div>

    <!-- Era indicators -->
    <nav class="era-nav">
      <a href="#era-flash" class="era-link era-link--flash" title="2010-2012">
        <span class="era-dot"></span>
        <span class="era-label">Flash</span>
      </a>
      <a href="#era-developer" class="era-link era-link--developer" title="2012-2017">
        <span class="era-dot"></span>
        <span class="era-label">Developer</span>
      </a>
      <a href="#era-executive" class="era-link era-link--executive" title="2017-2024">
        <span class="era-dot"></span>
        <span class="era-label">Executive</span>
      </a>
      <a href="#era-ai" class="era-link era-link--ai" title="2025+">
        <span class="era-dot"></span>
        <span class="era-label">AI</span>
      </a>
    </nav>
  </div>

  <!-- Animated background lines -->
  <div class="hero-lines">
    {Array.from({ length: 8 }).map((_, i) => (
      <div class="hero-line" style={`--index: ${i}`}></div>
    ))}
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <div class="scroll-mouse">
      <div class="scroll-wheel"></div>
    </div>
    <span class="scroll-text">Scroll to explore</span>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    background: #0a0a0a;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 900px;
  }

  .hero-name-wrapper {
    margin-bottom: 2rem;
  }

  .hero-name {
    font-family: 'Inter', sans-serif;
    font-size: clamp(3rem, 12vw, 8rem);
    font-weight: 800;
    color: #ffffff;
    letter-spacing: -0.04em;
    line-height: 1;
    margin: 0;
    animation: name-appear 1s ease-out;
  }

  .hero-title-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
    animation: titles-appear 1s ease-out 0.2s backwards;
  }

  .hero-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(0.875rem, 2vw, 1.125rem);
    color: #888888;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .hero-title:hover {
    color: #ffffff;
  }

  .hero-separator {
    color: #333333;
  }

  .hero-tagline {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: #666666;
    line-height: 1.7;
    margin: 0 0 3rem 0;
    animation: tagline-appear 1s ease-out 0.4s backwards;
  }

  .hero-cta {
    margin-bottom: 4rem;
    animation: cta-appear 1s ease-out 0.6s backwards;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid #333333;
    border-radius: 50px;
    color: #ffffff;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: #ffffff;
    color: #0a0a0a;
    border-color: #ffffff;
  }

  .cta-arrow {
    animation: arrow-bounce 2s ease-in-out infinite;
  }

  @keyframes arrow-bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(4px); }
  }

  /* Command palette hint */
  .cmd-k-hint {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    color: #666666;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
    animation: hint-appear 1s ease-out 0.5s backwards;
  }

  .cmd-k-hint:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.15);
    color: #888888;
  }

  .cmd-k-hint kbd {
    padding: 2px 6px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    font-size: 0.7rem;
  }

  .hint-label {
    color: #555555;
    margin-left: 0.25rem;
  }

  @keyframes hint-appear {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Era navigation */
  .era-nav {
    display: flex;
    justify-content: center;
    gap: 2rem;
    animation: nav-appear 1s ease-out 0.8s backwards;
    flex-wrap: wrap;
  }

  .era-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .era-link:hover {
    transform: translateY(-4px);
  }

  .era-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #333333;
    transition: all 0.3s ease;
  }

  .era-link--flash .era-dot { background: #00ffff; box-shadow: 0 0 10px #00ffff; }
  .era-link--developer .era-dot { background: #58a6ff; box-shadow: 0 0 10px #58a6ff; }
  .era-link--executive .era-dot { background: #0070f3; box-shadow: 0 0 10px #0070f3; }
  .era-link--ai .era-dot { background: #a855f7; box-shadow: 0 0 10px #a855f7; }

  .era-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }

  .era-link:hover .era-label {
    color: #ffffff;
  }

  /* Background lines */
  .hero-lines {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .hero-line {
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
    top: calc(10% + var(--index) * 10%);
    animation: line-slide 20s linear infinite;
    animation-delay: calc(var(--index) * -2.5s);
  }

  @keyframes line-slide {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    animation: scroll-appear 1s ease-out 1s backwards;
  }

  .scroll-mouse {
    width: 24px;
    height: 40px;
    border: 2px solid #333333;
    border-radius: 12px;
    position: relative;
  }

  .scroll-wheel {
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: #666666;
    border-radius: 2px;
    animation: scroll-wheel 2s ease-in-out infinite;
  }

  @keyframes scroll-wheel {
    0%, 100% { transform: translateX(-50%) translateY(0); opacity: 1; }
    50% { transform: translateX(-50%) translateY(10px); opacity: 0; }
  }

  .scroll-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    color: #444444;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  /* Animations */
  @keyframes name-appear {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes titles-appear {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes tagline-appear {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes cta-appear {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes nav-appear {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scroll-appear {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1.5rem;
    }

    .hero-title-bar {
      gap: 0.5rem;
    }

    .era-nav {
      gap: 1.5rem;
    }

    .scroll-indicator {
      bottom: 2rem;
    }

    .cmd-k-hint {
      display: none;
    }
  }
</style>

<script>
  // Command palette trigger
  const cmdKTrigger = document.getElementById('cmd-k-trigger');
  cmdKTrigger?.addEventListener('click', () => {
    // Trigger Cmd+K event
    const event = new KeyboardEvent('keydown', {
      key: 'k',
      metaKey: true,
      ctrlKey: true,
      bubbles: true
    });
    document.dispatchEvent(event);
  });
</script>
