---
/**
 * CommandPalette - Linear/Raycast-style command palette (Cmd+K)
 * Easter egg for the Executive era
 */

import { Home, Zap, Code, BarChart3, Bot, Link, Github, Moon } from '@lucide/astro';

interface CommandItem {
  id: string;
  label: string;
  iconComponent?: string;
  shortcut?: string;
  category?: string;
}

interface Props {
  commands?: CommandItem[];
  class?: string;
}

const defaultCommands: CommandItem[] = [
  { id: 'home', label: 'Go to Home', iconComponent: 'home', shortcut: 'G H', category: 'Navigation' },
  { id: 'flash', label: 'Flash Era (2010-2012)', iconComponent: 'zap', shortcut: 'G F', category: 'Navigation' },
  { id: 'developer', label: 'Developer Era (2012-2017)', iconComponent: 'code', shortcut: 'G D', category: 'Navigation' },
  { id: 'executive', label: 'Executive Era (2017-2024)', iconComponent: 'barchart', shortcut: 'G E', category: 'Navigation' },
  { id: 'ai', label: 'AI Era (2025+)', iconComponent: 'bot', shortcut: 'G A', category: 'Navigation' },
  { id: 'linkedin', label: 'Open LinkedIn', iconComponent: 'link', category: 'Links' },
  { id: 'github', label: 'Open GitHub', iconComponent: 'github', category: 'Links' },
  { id: 'theme', label: 'Toggle Theme', iconComponent: 'moon', shortcut: 'T', category: 'Preferences' },
];

const { commands = defaultCommands, class: className = '' } = Astro.props;

// Group commands by category
const groupedCommands = commands.reduce((acc, cmd) => {
  const cat = cmd.category || 'General';
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(cmd);
  return acc;
}, {} as Record<string, CommandItem[]>);
---

<div id="command-palette" class={`command-palette ${className}`} role="dialog" aria-modal="true" aria-label="Command palette">
  <div class="palette-backdrop"></div>
  <div class="palette-container">
    <!-- Search input -->
    <div class="palette-header">
      <div class="search-icon">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M7 12A5 5 0 1 0 7 2a5 5 0 0 0 0 10zM14 14l-3.5-3.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <input
        type="text"
        id="palette-search"
        class="palette-search"
        placeholder="Search commands..."
        autocomplete="off"
        autofocus
      />
      <div class="shortcut-hint">
        <kbd>esc</kbd>
      </div>
    </div>

    <!-- Command list -->
    <div class="palette-body">
      <div class="command-list">
        {Object.entries(groupedCommands).map(([category, items]) => (
          <div class="command-group">
            <div class="group-label">{category}</div>
            {items.map((cmd, index) => (
              <button
                class="command-item"
                data-command={cmd.id}
                tabindex={index === 0 ? 0 : -1}
              >
                <span class="command-icon">
                  {cmd.iconComponent === 'home' && <Home size={16} />}
                  {cmd.iconComponent === 'zap' && <Zap size={16} />}
                  {cmd.iconComponent === 'code' && <Code size={16} />}
                  {cmd.iconComponent === 'barchart' && <BarChart3 size={16} />}
                  {cmd.iconComponent === 'bot' && <Bot size={16} />}
                  {cmd.iconComponent === 'link' && <Link size={16} />}
                  {cmd.iconComponent === 'github' && <Github size={16} />}
                  {cmd.iconComponent === 'moon' && <Moon size={16} />}
                </span>
                <span class="command-label">{cmd.label}</span>
                {cmd.shortcut && (
                  <span class="command-shortcut">
                    {cmd.shortcut.split(' ').map((key) => (
                      <kbd>{key}</kbd>
                    ))}
                  </span>
                )}
              </button>
            ))}
          </div>
        ))}
      </div>
    </div>

    <!-- Footer -->
    <div class="palette-footer">
      <div class="footer-hints">
        <span class="hint"><kbd>â†‘</kbd><kbd>â†“</kbd> to navigate</span>
        <span class="hint"><kbd>â†µ</kbd> to select</span>
        <span class="hint"><kbd>esc</kbd> to close</span>
      </div>
    </div>
  </div>
</div>

<style>
  .command-palette {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    align-items: flex-start;
    justify-content: center;
    padding-top: 15vh;
  }

  .command-palette.active {
    display: flex;
  }

  .palette-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    animation: fadeIn 0.15s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .palette-container {
    position: relative;
    width: 100%;
    max-width: 560px;
    margin: 0 1rem;
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.05);
    overflow: hidden;
    animation: slideIn 0.15s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.98) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Header / Search */
  .palette-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .search-icon {
    color: #666;
    flex-shrink: 0;
  }

  .palette-search {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    color: #ededed;
  }

  .palette-search::placeholder {
    color: #666;
  }

  .shortcut-hint kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    padding: 2px 6px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: #666;
  }

  /* Command list */
  .palette-body {
    max-height: 360px;
    overflow-y: auto;
  }

  .command-list {
    padding: 8px;
  }

  .command-group {
    margin-bottom: 8px;
  }

  .command-group:last-child {
    margin-bottom: 0;
  }

  .group-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    font-weight: 500;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 8px 8px 4px;
  }

  .command-item {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    padding: 10px 12px;
    background: transparent;
    border: none;
    border-radius: 8px;
    color: #ededed;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    text-align: left;
    cursor: pointer;
    transition: background 0.1s ease;
  }

  .command-item:hover,
  .command-item.selected {
    background: rgba(255, 255, 255, 0.06);
  }

  .command-item.selected {
    background: rgba(0, 112, 243, 0.15);
  }

  .command-icon {
    font-size: 1rem;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    color: #888;
  }

  .command-item:hover .command-icon,
  .command-item.selected .command-icon {
    color: #ededed;
  }

  .command-label {
    flex: 1;
  }

  .command-shortcut {
    display: flex;
    gap: 4px;
  }

  .command-shortcut kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.65rem;
    padding: 2px 5px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: #888;
  }

  /* Footer */
  .palette-footer {
    padding: 8px 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(0, 0, 0, 0.2);
  }

  .footer-hints {
    display: flex;
    gap: 16px;
  }

  .hint {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    color: #666;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .hint kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.65rem;
    padding: 1px 4px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  /* Scrollbar */
  .palette-body::-webkit-scrollbar {
    width: 6px;
  }

  .palette-body::-webkit-scrollbar-track {
    background: transparent;
  }

  .palette-body::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .command-palette {
      padding-top: 10vh;
    }

    .footer-hints {
      display: none;
    }
  }
</style>

<script>
  import { trackCommandPaletteOpened, trackCommandPaletteUsed, trackEasterEggFound } from '../../scripts/analytics';

  const palette = document.getElementById('command-palette');
  const searchInput = document.getElementById('palette-search') as HTMLInputElement;
  const commandItems = document.querySelectorAll('.command-item');
  let selectedIndex = 0;

  // Hidden easter egg commands
  const hiddenCommands: Record<string, () => void> = {
    'celebrate': triggerConfetti,
    'stats for nerds': showStatsForNerds,
    'panic': triggerPanic,
  };

  // Toggle palette with Cmd+K / Ctrl+K
  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      togglePalette();
    }

    if (palette?.classList.contains('active')) {
      if (e.key === 'Escape') {
        closePalette();
      } else if (e.key === 'ArrowDown') {
        e.preventDefault();
        navigateDown();
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        navigateUp();
      } else if (e.key === 'Enter') {
        e.preventDefault();
        executeCommand();
      }
    }
  });

  // Close on backdrop click
  palette?.querySelector('.palette-backdrop')?.addEventListener('click', closePalette);

  function togglePalette() {
    if (palette?.classList.contains('active')) {
      closePalette();
    } else {
      openPalette();
    }
  }

  function openPalette() {
    palette?.classList.add('active');
    searchInput?.focus();
    selectedIndex = 0;
    updateSelection();

    // Track command palette opened
    const currentEra = document.documentElement.getAttribute('data-morph-era') || 'unknown';
    trackCommandPaletteOpened(currentEra);
  }

  function closePalette() {
    palette?.classList.remove('active');
    if (searchInput) searchInput.value = '';
  }

  function navigateDown() {
    const visibleItems = getVisibleItems();
    if (selectedIndex < visibleItems.length - 1) {
      selectedIndex++;
      updateSelection();
    }
  }

  function navigateUp() {
    if (selectedIndex > 0) {
      selectedIndex--;
      updateSelection();
    }
  }

  function updateSelection() {
    const visibleItems = getVisibleItems();
    commandItems.forEach((item) => item.classList.remove('selected'));
    if (visibleItems[selectedIndex]) {
      visibleItems[selectedIndex].classList.add('selected');
      visibleItems[selectedIndex].scrollIntoView({ block: 'nearest' });
    }
  }

  function getVisibleItems() {
    return Array.from(commandItems).filter(
      (item) => (item as HTMLElement).style.display !== 'none'
    );
  }

  function executeCommand() {
    // Check for hidden commands first
    const searchValue = searchInput?.value.toLowerCase().trim() || '';
    if (searchValue && hiddenCommands[searchValue]) {
      closePalette();
      hiddenCommands[searchValue]();
      trackEasterEggFound(`cmd_${searchValue.replace(/ /g, '_')}`);
      return;
    }

    const visibleItems = getVisibleItems();
    const selected = visibleItems[selectedIndex] as HTMLElement;
    if (selected) {
      const commandId = selected.dataset.command;
      handleCommand(commandId);
    }
  }

  function handleCommand(id: string | undefined) {
    // Track command usage before closing
    if (id) {
      const searchQuery = searchInput?.value || '';
      trackCommandPaletteUsed(id, searchQuery);
    }

    closePalette();

    switch (id) {
      case 'home':
        document.getElementById('hero')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'flash':
        document.getElementById('era-flash')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'developer':
        document.getElementById('era-developer')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'executive':
        document.getElementById('era-executive')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'ai':
        document.getElementById('era-ai')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'linkedin':
        window.open('https://linkedin.com/in/diogoreus', '_blank');
        break;
      case 'github':
        window.open('https://github.com/diogoreus', '_blank');
        break;
      default:
        // Command not yet implemented
        break;
    }
  }

  // Filter commands on search
  searchInput?.addEventListener('input', () => {
    const query = searchInput.value.toLowerCase();

    commandItems.forEach((item) => {
      const label = item.querySelector('.command-label')?.textContent?.toLowerCase() || '';
      (item as HTMLElement).style.display = label.includes(query) ? '' : 'none';
    });

    selectedIndex = 0;
    updateSelection();
  });

  // Click on command
  commandItems.forEach((item) => {
    item.addEventListener('click', () => {
      const commandId = (item as HTMLElement).dataset.command;
      handleCommand(commandId);
    });
  });

  // Hidden command implementations
  function triggerConfetti() {
    const colors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4', '#feca57', '#ff9ff3', '#54a0ff'];
    const confettiCount = 150;
    const container = document.createElement('div');
    container.style.cssText = 'position:fixed;inset:0;pointer-events:none;z-index:99999;overflow:hidden;';
    document.body.appendChild(container);

    for (let i = 0; i < confettiCount; i++) {
      const confetti = document.createElement('div');
      const color = colors[Math.floor(Math.random() * colors.length)];
      const size = Math.random() * 10 + 5;
      const startX = Math.random() * window.innerWidth;
      const startY = -20;
      const rotation = Math.random() * 360;
      const duration = Math.random() * 2 + 2;
      const delay = Math.random() * 0.5;

      confetti.style.cssText = `
        position:absolute;
        width:${size}px;
        height:${size}px;
        background:${color};
        left:${startX}px;
        top:${startY}px;
        transform:rotate(${rotation}deg);
        border-radius:${Math.random() > 0.5 ? '50%' : '2px'};
        animation:confettiFall ${duration}s ease-out ${delay}s forwards;
      `;
      container.appendChild(confetti);
    }

    const style = document.createElement('style');
    style.textContent = `
      @keyframes confettiFall {
        0% { transform: translateY(0) rotate(0deg); opacity: 1; }
        100% { transform: translateY(${window.innerHeight + 100}px) rotate(${720 + Math.random() * 360}deg); opacity: 0; }
      }
    `;
    document.head.appendChild(style);

    setTimeout(() => {
      container.remove();
      style.remove();
    }, 4000);
  }

  function showStatsForNerds() {
    const loadTime = (performance.timing.loadEventEnd - performance.timing.navigationStart) / 1000;
    const domSize = document.getElementsByTagName('*').length;
    const memoryUsed = (performance as any).memory?.usedJSHeapSize
      ? `${Math.round((performance as any).memory.usedJSHeapSize / 1024 / 1024)}MB`
      : 'N/A';

    const overlay = document.createElement('div');
    overlay.innerHTML = `
      <div class="stats-overlay">
        <div class="stats-content">
          <div class="stats-header">
            <span class="stats-icon">ðŸ¤“</span>
            <span class="stats-title">Stats for Nerds</span>
            <button class="stats-close">&times;</button>
          </div>
          <div class="stats-grid">
            <div class="stat-item">
              <span class="stat-label">Page Load</span>
              <span class="stat-value">${loadTime.toFixed(2)}s</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">DOM Elements</span>
              <span class="stat-value">${domSize.toLocaleString()}</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Memory</span>
              <span class="stat-value">${memoryUsed}</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Framework</span>
              <span class="stat-value">Astro + React</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Styling</span>
              <span class="stat-value">Tailwind v4</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Animation</span>
              <span class="stat-value">GSAP + Three.js</span>
            </div>
          </div>
          <div class="stats-footer">Press Escape or click outside to close</div>
        </div>
      </div>
    `;

    const style = document.createElement('style');
    style.textContent = `
      .stats-overlay {
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(8px);
        z-index: 99999;
        animation: fadeIn 0.2s ease;
      }
      @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
      .stats-content {
        background: #1a1a1a;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 20px;
        max-width: 400px;
        width: 90%;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        animation: slideUp 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
      }
      @keyframes slideUp { from { transform: translateY(20px); opacity: 0; } }
      .stats-header {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 16px;
        padding-bottom: 12px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }
      .stats-icon { font-size: 24px; }
      .stats-title { flex: 1; font-size: 16px; font-weight: 600; color: #ededed; }
      .stats-close {
        background: none;
        border: none;
        color: #666;
        font-size: 20px;
        cursor: pointer;
        padding: 4px 8px;
        border-radius: 4px;
        transition: all 0.15s;
      }
      .stats-close:hover { background: rgba(255,255,255,0.1); color: #fff; }
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
      }
      .stat-item {
        background: rgba(255, 255, 255, 0.03);
        padding: 12px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        gap: 4px;
      }
      .stat-label { font-size: 11px; color: #666; text-transform: uppercase; letter-spacing: 0.05em; }
      .stat-value { font-size: 14px; color: #ededed; font-weight: 500; }
      .stats-footer {
        margin-top: 16px;
        text-align: center;
        font-size: 11px;
        color: #666;
      }
    `;
    document.head.appendChild(style);
    document.body.appendChild(overlay);

    const closeStats = () => {
      overlay.remove();
      style.remove();
    };

    overlay.querySelector('.stats-close')?.addEventListener('click', closeStats);
    overlay.querySelector('.stats-overlay')?.addEventListener('click', (e) => {
      if (e.target === overlay.querySelector('.stats-overlay')) closeStats();
    });
    const escHandler = (e: KeyboardEvent) => {
      if (e.key === 'Escape') {
        closeStats();
        document.removeEventListener('keydown', escHandler);
      }
    };
    document.addEventListener('keydown', escHandler);
  }

  function triggerPanic() {
    // Find all elements that look like metrics/counters in the executive section
    const executiveSection = document.getElementById('era-executive');
    if (!executiveSection) return;

    const numberElements = executiveSection.querySelectorAll('[class*="counter"], [class*="metric"], [class*="number"], [class*="stat"]');
    const originalValues: Map<Element, string> = new Map();

    // Store original values and animate to zero
    numberElements.forEach((el) => {
      const textContent = el.textContent || '';
      if (/\d/.test(textContent)) {
        originalValues.set(el, textContent);
        el.classList.add('panic-animate');
      }
    });

    // Also animate any visible numbers in bento cards
    const bentoCards = executiveSection.querySelectorAll('.bento-card, [class*="bento"]');
    bentoCards.forEach((card) => {
      const nums = card.querySelectorAll('span, div, p');
      nums.forEach((el) => {
        const text = el.textContent || '';
        if (/^\$?\d[\d,\.]*[KMB%]?$/.test(text.trim())) {
          originalValues.set(el, text);
          (el as HTMLElement).style.transition = 'all 0.3s ease';
          el.textContent = text.replace(/[\d,\.]+/, '0');
        }
      });
    });

    // Add panic animation style
    const style = document.createElement('style');
    style.textContent = `
      .panic-animate {
        animation: panicShake 0.1s linear infinite;
      }
      @keyframes panicShake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-2px); }
        75% { transform: translateX(2px); }
      }
    `;
    document.head.appendChild(style);

    // Restore after 2 seconds
    setTimeout(() => {
      originalValues.forEach((value, el) => {
        el.textContent = value;
        el.classList.remove('panic-animate');
        (el as HTMLElement).style.transition = '';
      });
      style.remove();
    }, 2000);
  }
</script>
