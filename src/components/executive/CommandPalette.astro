---
/**
 * CommandPalette - Linear/Raycast-style command palette (Cmd+K)
 * Easter egg for the Executive era
 */

import { Home, Zap, Code, BarChart3, Bot, Link, Github, Moon } from '@lucide/astro';

interface CommandItem {
  id: string;
  label: string;
  iconComponent?: string;
  shortcut?: string;
  category?: string;
}

interface Props {
  commands?: CommandItem[];
  class?: string;
}

const defaultCommands: CommandItem[] = [
  { id: 'home', label: 'Go to Home', iconComponent: 'home', shortcut: 'G H', category: 'Navigation' },
  { id: 'flash', label: 'Flash Era (2010-2012)', iconComponent: 'zap', shortcut: 'G F', category: 'Navigation' },
  { id: 'developer', label: 'Developer Era (2012-2017)', iconComponent: 'code', shortcut: 'G D', category: 'Navigation' },
  { id: 'executive', label: 'Executive Era (2017-2024)', iconComponent: 'barchart', shortcut: 'G E', category: 'Navigation' },
  { id: 'ai', label: 'AI Era (2025+)', iconComponent: 'bot', shortcut: 'G A', category: 'Navigation' },
  { id: 'linkedin', label: 'Open LinkedIn', iconComponent: 'link', category: 'Links' },
  { id: 'github', label: 'Open GitHub', iconComponent: 'github', category: 'Links' },
  { id: 'theme', label: 'Toggle Theme', iconComponent: 'moon', shortcut: 'T', category: 'Preferences' },
];

const { commands = defaultCommands, class: className = '' } = Astro.props;

// Group commands by category
const groupedCommands = commands.reduce((acc, cmd) => {
  const cat = cmd.category || 'General';
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(cmd);
  return acc;
}, {} as Record<string, CommandItem[]>);
---

<div id="command-palette" class={`command-palette ${className}`} role="dialog" aria-modal="true" aria-label="Command palette">
  <div class="palette-backdrop"></div>
  <div class="palette-container">
    <!-- Search input -->
    <div class="palette-header">
      <div class="search-icon">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M7 12A5 5 0 1 0 7 2a5 5 0 0 0 0 10zM14 14l-3.5-3.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <input
        type="text"
        id="palette-search"
        class="palette-search"
        placeholder="Search commands..."
        autocomplete="off"
        autofocus
      />
      <div class="shortcut-hint">
        <kbd>esc</kbd>
      </div>
    </div>

    <!-- Command list -->
    <div class="palette-body">
      <div class="command-list">
        {Object.entries(groupedCommands).map(([category, items]) => (
          <div class="command-group">
            <div class="group-label">{category}</div>
            {items.map((cmd, index) => (
              <button
                class="command-item"
                data-command={cmd.id}
                tabindex={index === 0 ? 0 : -1}
              >
                <span class="command-icon">
                  {cmd.iconComponent === 'home' && <Home size={16} />}
                  {cmd.iconComponent === 'zap' && <Zap size={16} />}
                  {cmd.iconComponent === 'code' && <Code size={16} />}
                  {cmd.iconComponent === 'barchart' && <BarChart3 size={16} />}
                  {cmd.iconComponent === 'bot' && <Bot size={16} />}
                  {cmd.iconComponent === 'link' && <Link size={16} />}
                  {cmd.iconComponent === 'github' && <Github size={16} />}
                  {cmd.iconComponent === 'moon' && <Moon size={16} />}
                </span>
                <span class="command-label">{cmd.label}</span>
                {cmd.shortcut && (
                  <span class="command-shortcut">
                    {cmd.shortcut.split(' ').map((key) => (
                      <kbd>{key}</kbd>
                    ))}
                  </span>
                )}
              </button>
            ))}
          </div>
        ))}
      </div>
    </div>

    <!-- Footer -->
    <div class="palette-footer">
      <div class="footer-hints">
        <span class="hint"><kbd>↑</kbd><kbd>↓</kbd> to navigate</span>
        <span class="hint"><kbd>↵</kbd> to select</span>
        <span class="hint"><kbd>esc</kbd> to close</span>
      </div>
    </div>
  </div>
</div>

<style>
  .command-palette {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    align-items: flex-start;
    justify-content: center;
    padding-top: 15vh;
  }

  .command-palette.active {
    display: flex;
  }

  .palette-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    animation: fadeIn 0.15s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .palette-container {
    position: relative;
    width: 100%;
    max-width: 560px;
    margin: 0 1rem;
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.05);
    overflow: hidden;
    animation: slideIn 0.15s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.98) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Header / Search */
  .palette-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .search-icon {
    color: #666;
    flex-shrink: 0;
  }

  .palette-search {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    color: #ededed;
  }

  .palette-search::placeholder {
    color: #666;
  }

  .shortcut-hint kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    padding: 2px 6px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: #666;
  }

  /* Command list */
  .palette-body {
    max-height: 360px;
    overflow-y: auto;
  }

  .command-list {
    padding: 8px;
  }

  .command-group {
    margin-bottom: 8px;
  }

  .command-group:last-child {
    margin-bottom: 0;
  }

  .group-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    font-weight: 500;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 8px 8px 4px;
  }

  .command-item {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    padding: 10px 12px;
    background: transparent;
    border: none;
    border-radius: 8px;
    color: #ededed;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    text-align: left;
    cursor: pointer;
    transition: background 0.1s ease;
  }

  .command-item:hover,
  .command-item.selected {
    background: rgba(255, 255, 255, 0.06);
  }

  .command-item.selected {
    background: rgba(0, 112, 243, 0.15);
  }

  .command-icon {
    font-size: 1rem;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    color: #888;
  }

  .command-item:hover .command-icon,
  .command-item.selected .command-icon {
    color: #ededed;
  }

  .command-label {
    flex: 1;
  }

  .command-shortcut {
    display: flex;
    gap: 4px;
  }

  .command-shortcut kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.65rem;
    padding: 2px 5px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: #888;
  }

  /* Footer */
  .palette-footer {
    padding: 8px 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(0, 0, 0, 0.2);
  }

  .footer-hints {
    display: flex;
    gap: 16px;
  }

  .hint {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    color: #666;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .hint kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.65rem;
    padding: 1px 4px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  /* Scrollbar */
  .palette-body::-webkit-scrollbar {
    width: 6px;
  }

  .palette-body::-webkit-scrollbar-track {
    background: transparent;
  }

  .palette-body::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .command-palette {
      padding-top: 10vh;
    }

    .footer-hints {
      display: none;
    }
  }
</style>

<script>
  import { trackCommandPaletteOpened, trackCommandPaletteUsed } from '../../scripts/analytics';

  const palette = document.getElementById('command-palette');
  const searchInput = document.getElementById('palette-search') as HTMLInputElement;
  const commandItems = document.querySelectorAll('.command-item');
  let selectedIndex = 0;

  // Toggle palette with Cmd+K / Ctrl+K
  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      togglePalette();
    }

    if (palette?.classList.contains('active')) {
      if (e.key === 'Escape') {
        closePalette();
      } else if (e.key === 'ArrowDown') {
        e.preventDefault();
        navigateDown();
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        navigateUp();
      } else if (e.key === 'Enter') {
        e.preventDefault();
        executeCommand();
      }
    }
  });

  // Close on backdrop click
  palette?.querySelector('.palette-backdrop')?.addEventListener('click', closePalette);

  function togglePalette() {
    if (palette?.classList.contains('active')) {
      closePalette();
    } else {
      openPalette();
    }
  }

  function openPalette() {
    palette?.classList.add('active');
    searchInput?.focus();
    selectedIndex = 0;
    updateSelection();

    // Track command palette opened
    const currentEra = document.documentElement.getAttribute('data-morph-era') || 'unknown';
    trackCommandPaletteOpened(currentEra);
  }

  function closePalette() {
    palette?.classList.remove('active');
    if (searchInput) searchInput.value = '';
  }

  function navigateDown() {
    const visibleItems = getVisibleItems();
    if (selectedIndex < visibleItems.length - 1) {
      selectedIndex++;
      updateSelection();
    }
  }

  function navigateUp() {
    if (selectedIndex > 0) {
      selectedIndex--;
      updateSelection();
    }
  }

  function updateSelection() {
    const visibleItems = getVisibleItems();
    commandItems.forEach((item) => item.classList.remove('selected'));
    if (visibleItems[selectedIndex]) {
      visibleItems[selectedIndex].classList.add('selected');
      visibleItems[selectedIndex].scrollIntoView({ block: 'nearest' });
    }
  }

  function getVisibleItems() {
    return Array.from(commandItems).filter(
      (item) => (item as HTMLElement).style.display !== 'none'
    );
  }

  function executeCommand() {
    const visibleItems = getVisibleItems();
    const selected = visibleItems[selectedIndex] as HTMLElement;
    if (selected) {
      const commandId = selected.dataset.command;
      handleCommand(commandId);
    }
  }

  function handleCommand(id: string | undefined) {
    // Track command usage before closing
    if (id) {
      const searchQuery = searchInput?.value || '';
      trackCommandPaletteUsed(id, searchQuery);
    }

    closePalette();

    switch (id) {
      case 'home':
        document.getElementById('hero')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'flash':
        document.getElementById('era-flash')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'developer':
        document.getElementById('era-developer')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'executive':
        document.getElementById('era-executive')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'ai':
        document.getElementById('era-ai')?.scrollIntoView({ behavior: 'smooth' });
        break;
      case 'linkedin':
        window.open('https://linkedin.com/in/diogoreus', '_blank');
        break;
      case 'github':
        window.open('https://github.com/diogoreus', '_blank');
        break;
      default:
        // Command not yet implemented
        break;
    }
  }

  // Filter commands on search
  searchInput?.addEventListener('input', () => {
    const query = searchInput.value.toLowerCase();

    commandItems.forEach((item) => {
      const label = item.querySelector('.command-label')?.textContent?.toLowerCase() || '';
      (item as HTMLElement).style.display = label.includes(query) ? '' : 'none';
    });

    selectedIndex = 0;
    updateSelection();
  });

  // Click on command
  commandItems.forEach((item) => {
    item.addEventListener('click', () => {
      const commandId = (item as HTMLElement).dataset.command;
      handleCommand(commandId);
    });
  });
</script>
