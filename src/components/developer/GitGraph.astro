---
interface Commit {
  hash: string;
  message: string;
  date: string;
  branch?: string;
  isMerge?: boolean;
}

interface Props {
  commits: Commit[];
  class?: string;
}

const { commits, class: className = '' } = Astro.props;
---

<div class={`git-graph ${className}`}>
  <div class="graph-header">
    <svg class="git-icon" viewBox="0 0 16 16" fill="currentColor">
      <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM1.5 8a6.5 6.5 0 1 0 13 0 6.5 6.5 0 0 0-13 0z"/>
      <path d="M8 4a.75.75 0 0 1 .75.75v2.5h2.5a.75.75 0 0 1 0 1.5h-2.5v2.5a.75.75 0 0 1-1.5 0v-2.5h-2.5a.75.75 0 0 1 0-1.5h2.5v-2.5A.75.75 0 0 1 8 4z"/>
    </svg>
    <span class="graph-title">Commit History</span>
  </div>

  <div class="graph-timeline">
    {commits.map((commit, index) => (
      <div class={`commit ${commit.isMerge ? 'commit--merge' : ''}`} style={`--index: ${index}`}>
        <div class="commit-line">
          <div class="commit-node"></div>
          {index < commits.length - 1 && <div class="commit-connector"></div>}
        </div>
        <div class="commit-content">
          <div class="commit-header">
            <span class="commit-hash">{commit.hash}</span>
            {commit.branch && <span class="commit-branch">{commit.branch}</span>}
          </div>
          <p class="commit-message">{commit.message}</p>
          <span class="commit-date">{commit.date}</span>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .git-graph {
    background: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    overflow: hidden;
    font-family: 'JetBrains Mono', monospace;
  }

  .graph-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: #161b22;
    border-bottom: 1px solid #30363d;
  }

  .git-icon {
    width: 16px;
    height: 16px;
    color: #8b949e;
  }

  .graph-title {
    font-size: 0.875rem;
    color: #c9d1d9;
    font-weight: 600;
  }

  .graph-timeline {
    padding: 1rem;
  }

  .commit {
    display: flex;
    gap: 1rem;
    opacity: 0;
    animation: commit-appear 0.4s ease forwards;
    animation-delay: calc(var(--index) * 0.1s);
  }

  .commit + .commit {
    margin-top: 0;
  }

  .commit-line {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 0.25rem;
  }

  .commit-node {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #58a6ff;
    border: 2px solid #0d1117;
    box-shadow: 0 0 0 2px #58a6ff;
    flex-shrink: 0;
    z-index: 1;
  }

  .commit--merge .commit-node {
    background: #a371f7;
    box-shadow: 0 0 0 2px #a371f7;
  }

  .commit-connector {
    width: 2px;
    flex: 1;
    min-height: 30px;
    background: linear-gradient(180deg, #58a6ff 0%, #30363d 100%);
    margin-top: -2px;
  }

  .commit--merge .commit-connector {
    background: linear-gradient(180deg, #a371f7 0%, #30363d 100%);
  }

  .commit-content {
    flex: 1;
    padding-bottom: 1.5rem;
  }

  .commit-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .commit-hash {
    font-size: 0.75rem;
    color: #58a6ff;
    background: rgba(88, 166, 255, 0.1);
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
  }

  .commit-branch {
    font-size: 0.65rem;
    color: #3fb950;
    background: rgba(63, 185, 80, 0.1);
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(63, 185, 80, 0.3);
  }

  .commit-message {
    color: #c9d1d9;
    font-size: 0.875rem;
    margin: 0 0 0.25rem 0;
    line-height: 1.4;
  }

  .commit-date {
    color: #8b949e;
    font-size: 0.7rem;
  }

  @keyframes commit-appear {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
