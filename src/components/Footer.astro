<style>
  .footer {
    position: relative;
    padding: 6rem 2rem 3rem;
    background: #030303;
    overflow: hidden;
  }

  .footer-gradient {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 150%;
    height: 100%;
    background:
      radial-gradient(ellipse 60% 40% at 30% 100%, rgba(0, 255, 255, 0.05), transparent),
      radial-gradient(ellipse 60% 40% at 70% 100%, rgba(168, 85, 247, 0.05), transparent);
    pointer-events: none;
  }

  .footer-content {
    position: relative;
    z-index: 1;
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  /* Era synthesis */
  .era-synthesis {
    margin-bottom: 4rem;
  }

  .synthesis-line {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .era-marker {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    animation: marker-pulse 3s ease-in-out infinite;
  }

  .era-marker--flash {
    background: #00ffff;
    box-shadow: 0 0 15px #00ffff;
    animation-delay: 0s;
  }

  .era-marker--developer {
    background: #58a6ff;
    box-shadow: 0 0 15px #58a6ff;
    animation-delay: 0.5s;
  }

  .era-marker--executive {
    background: #0070f3;
    box-shadow: 0 0 15px #0070f3;
    animation-delay: 1s;
  }

  .era-marker--ai {
    background: #a855f7;
    box-shadow: 0 0 15px #a855f7;
    animation-delay: 1.5s;
  }

  @keyframes marker-pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }

  .era-connector {
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, currentColor, rgba(255, 255, 255, 0.1));
    opacity: 0.3;
  }

  .synthesis-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  /* CTA */
  .footer-cta {
    margin-bottom: 4rem;
  }

  .cta-subtext {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: #666666;
    margin: 0 0 2rem 0;
  }

  .cta-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #888888;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: #ffffff;
    transform: translateY(-2px);
  }

  .social-icon {
    width: 18px;
    height: 18px;
  }

  /* Stats */
  .footer-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
    margin-bottom: 4rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: #666666;
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright,
  .location {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: #444444;
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 4rem 1rem 2rem;
    }

    .era-connector {
      width: 30px;
    }

    .footer-stats {
      gap: 2rem;
      padding: 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
