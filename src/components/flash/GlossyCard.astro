---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className = '' } = Astro.props;
---

<div class={`glossy-card ${className}`}>
  <div class="card-shine"></div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    {subtitle && <p class="card-subtitle">{subtitle}</p>}
    <slot />
  </div>
  <div class="card-reflection"></div>
</div>

<style>
  .glossy-card {
    position: relative;
    background: linear-gradient(
      145deg,
      rgba(45, 27, 78, 0.9) 0%,
      rgba(26, 10, 46, 0.95) 50%,
      rgba(45, 27, 78, 0.9) 100%
    );
    border: 1px solid rgba(0, 255, 255, 0.3);
    border-radius: 20px;
    padding: 2rem;
    overflow: hidden;
    backdrop-filter: blur(10px);
    box-shadow:
      0 8px 32px rgba(0, 255, 255, 0.15),
      0 0 60px rgba(255, 0, 255, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .glossy-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow:
      0 16px 48px rgba(0, 255, 255, 0.25),
      0 0 80px rgba(255, 0, 255, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .card-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.2),
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transform: skewX(-20deg);
    transition: left 0.6s ease;
    pointer-events: none;
  }

  .glossy-card:hover .card-shine {
    left: 100%;
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  .card-title {
    font-family: 'Inter', Arial, sans-serif;
    font-weight: 800;
    font-size: 1.5rem;
    color: #00ffff;
    text-shadow:
      0 0 10px rgba(0, 255, 255, 0.5),
      0 0 30px rgba(0, 255, 255, 0.3);
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
  }

  .card-subtitle {
    font-family: Verdana, sans-serif;
    font-size: 0.875rem;
    color: #b8a8d4;
    margin-bottom: 1rem;
  }

  .card-reflection {
    position: absolute;
    bottom: -50%;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(
      to bottom,
      rgba(0, 255, 255, 0.05),
      transparent
    );
    transform: scaleY(-1);
    opacity: 0.3;
    pointer-events: none;
  }

  /* Glow pulse animation */
  @keyframes glow-pulse {
    0%, 100% {
      box-shadow:
        0 8px 32px rgba(0, 255, 255, 0.15),
        0 0 60px rgba(255, 0, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    50% {
      box-shadow:
        0 8px 32px rgba(0, 255, 255, 0.25),
        0 0 80px rgba(255, 0, 255, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.25);
    }
  }

  .glossy-card {
    animation: glow-pulse 4s ease-in-out infinite;
  }
</style>
