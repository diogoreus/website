---
interface Props {
  href?: string;
  variant?: 'cyan' | 'magenta';
  class?: string;
}

const { href, variant = 'cyan', class: className = '' } = Astro.props;
const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  class={`neon-button neon-button--${variant} ${className}`}
>
  <span class="button-bg"></span>
  <span class="button-text">
    <slot />
  </span>
  <span class="button-glow"></span>
</Tag>

<style>
  .neon-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-family: 'Inter', Arial, sans-serif;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .button-bg {
    position: absolute;
    inset: 0;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .neon-button--cyan .button-bg {
    background: linear-gradient(135deg, #00ffff 0%, #00cccc 100%);
    box-shadow:
      0 4px 20px rgba(0, 255, 255, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.4),
      inset 0 -2px 0 rgba(0, 0, 0, 0.2);
  }

  .neon-button--magenta .button-bg {
    background: linear-gradient(135deg, #ff00ff 0%, #cc00cc 100%);
    box-shadow:
      0 4px 20px rgba(255, 0, 255, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.4),
      inset 0 -2px 0 rgba(0, 0, 0, 0.2);
  }

  .button-text {
    position: relative;
    z-index: 2;
    color: #1a0a2e;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.3);
    letter-spacing: 0.05em;
  }

  .button-glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transform: skewX(-20deg);
    transition: left 0.5s ease;
  }

  .neon-button:hover .button-glow {
    left: 100%;
  }

  .neon-button:hover {
    transform: translateY(-4px) scale(1.05);
  }

  .neon-button--cyan:hover .button-bg {
    box-shadow:
      0 8px 40px rgba(0, 255, 255, 0.6),
      0 0 60px rgba(0, 255, 255, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.5),
      inset 0 -2px 0 rgba(0, 0, 0, 0.2);
  }

  .neon-button--magenta:hover .button-bg {
    box-shadow:
      0 8px 40px rgba(255, 0, 255, 0.6),
      0 0 60px rgba(255, 0, 255, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.5),
      inset 0 -2px 0 rgba(0, 0, 0, 0.2);
  }

  .neon-button:active {
    transform: translateY(-2px) scale(1.02);
  }

  /* Loading bar animation on load */
  @keyframes load-in {
    0% {
      clip-path: inset(0 100% 0 0);
    }
    100% {
      clip-path: inset(0 0 0 0);
    }
  }

  .neon-button {
    animation: load-in 0.6s ease-out forwards;
    animation-delay: 0.3s;
    clip-path: inset(0 100% 0 0);
  }
</style>
