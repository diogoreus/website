    color: #888;
  }

  /* Executive Skills */
  .skills-section {
    margin-bottom: 4rem;
  }

  .skills-columns {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .skills-column {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .skills-column-title {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    color: #0070f3;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 1rem 0;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-pill {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    color: #ededed;
    background: rgba(0, 112, 243, 0.1);
    border: 1px solid rgba(0, 112, 243, 0.2);
    padding: 0.4rem 0.75rem;
    border-radius: 20px;
    transition: all 0.2s ease;
  }

  .skill-pill:hover {
    background: rgba(0, 112, 243, 0.2);
    border-color: rgba(0, 112, 243, 0.4);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .executive-era {
      padding: 4rem 1rem 6rem;
    }

    .keyboard-hint {
      display: none;
    }

    .recognition-bar {
      gap: 1.5rem;
      padding: 1rem;
    }

    .skills-columns {
      grid-template-columns: 1fr;
    }
  }
</style>
