---
/**
 * ExecutiveEra (2017-2024) - Radical Redesign
 *
 * Design inspiration: Linear, Vercel, shadcn/ui, Notion
 * Layout: Dashboard with asymmetric card grid, glassmorphism
 * Elements: Command palette, metrics, status indicators, keyboard hints
 */

import BentoCard from '../executive/BentoCard.astro';
import AnimatedCounter from '../executive/AnimatedCounter.astro';
import LogoCloud from '../executive/LogoCloud.astro';
import CommandPalette from '../executive/CommandPalette.astro';
import { FileText, GraduationCap, Trophy, Star, Rocket } from '@lucide/astro';

const logos = [
  { name: 'Volkswagen' },
  { name: 'Embraer' },
  { name: 'Banco do Brasil' },
  { name: 'Santander' },
  { name: 'Tok&Stok' },
  { name: 'Tupy' },
  { name: 'Jadlog' },
  { name: 'Grupo Zaffari' },
  { name: 'Panvel' },
  { name: 'MAPFRE' },
  { name: 'Unimed' },
  { name: 'BRF' },
  { name: 'Senior' },
];

const roles = [
  {
    title: 'CPO',
    subtitle: 'Chief Product Officer',
    duration: '5y 2mo',
    period: 'Aug 2017 - Sep 2022',
    teamSize: '~15',
    highlights: [
      'Defined product vision for LMS platform',
      'Led Go-to-Market strategy',
      'Adopted Shape Up methodology',
      'Managed Product & Dev team of ~15'
    ]
  },
  {
    title: 'CGO',
    subtitle: 'Chief Growth Officer',
    duration: '2y 4mo',
    period: 'Sep 2022 - Dec 2024',
    teamSize: '~13',
    highlights: [
      'Led team of ~13 across Marketing, Pre-Sales, Sales',
      'Added 100+ new clients',
      'Developed pricing strategies',
      'Internalized Inbound Marketing'
    ]
  }
];

const products = [
  {
    name: 'Applique',
    iconComponent: 'filetext',
    description: 'Brazil\'s largest e-learning authoring tool. SCORM-compliant, no-code content creation with 1M+ assets.',
    stats: ['100+ clients', '50+ internal users']
  },
  {
    name: 'Plataforma Mobiliza',
    iconComponent: 'graduationcap',
    description: 'Cloud-based LMS with gamification, workflow automations, and leadership dashboards.',
    stats: ['API integrations', 'Analytics']
  }
];

const recognition = [
  { iconComponent: 'trophy', text: 'Great Place to Work 2017, 2019' },
  { iconComponent: 'star', text: '4.5/5 Glassdoor • 95% recommend' },
  { iconComponent: 'rocket', text: 'InovAtiva Brasil • Promessas Endeavor' },
];
---

<section id="era-executive" class="era-section executive-era" data-era="executive">
  <!-- Gradient background -->
  <div class="executive-bg">
    <div class="gradient-glow"></div>
    <div class="noise-overlay"></div>
  </div>

  <div class="executive-content">
    <!-- Keyboard shortcut hint -->
    <div class="keyboard-hint animate-in">
      <span class="hint-text">Press</span>
      <kbd>⌘</kbd>
      <kbd>K</kbd>
      <span class="hint-text">to search</span>
    </div>

    <!-- Era badge -->
    <div class="era-badge animate-in">
      <div class="badge-dot"></div>
      <div class="badge-text">
        <span class="badge-year">2017 - 2024</span>
        <span class="badge-title">Executive Era</span>
      </div>
    </div>

    <!-- Main heading -->
    <div class="heading-container animate-in">
      <h2 class="executive-heading">
        <span class="heading-line">Executive by</span>
        <span class="heading-line heading-accent">Challenge</span>
      </h2>
    </div>

    <p class="executive-intro animate-in">
      From building products to building a company. Led the transformation from
      services to SaaS, scaled revenue to $10M ARR, and grew a team that shapes
      Brazil's corporate learning landscape.
    </p>

    <!-- Metrics dashboard grid -->
    <div class="dashboard-grid">
      <!-- Revenue metric - large -->
      <div class="dash-card dash-card--metric dash-card--large">
        <div class="card-header">
          <span class="card-label">Annual Revenue</span>
          <span class="status-badge status-badge--live">
            <span class="status-dot"></span>
            Live
          </span>
        </div>
        <div class="metric-value">
          <AnimatedCounter value={9.8} prefix="$" suffix="M" decimals={1} />
        </div>
        <p class="metric-context">2024 ARR • Bootstrapped</p>
        <div class="metric-chart">
          <svg viewBox="0 0 200 40" preserveAspectRatio="none">
            <path d="M0,35 Q20,32 40,30 T80,25 T120,18 T160,12 T200,5" fill="none" stroke="url(#chartGradient)" stroke-width="2"/>
            <defs>
              <linearGradient id="chartGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" stop-color="#0070f3" stop-opacity="0.3"/>
                <stop offset="100%" stop-color="#0070f3"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
      </div>

      <!-- Growth metric -->
      <div class="dash-card dash-card--metric">
        <span class="card-label">YoY Growth</span>
        <div class="metric-value metric-value--green">
          <AnimatedCounter value={45} prefix="+" suffix="%" />
        </div>
        <p class="metric-context">Revenue growth as CGO</p>
      </div>

      <!-- Clients -->
      <div class="dash-card dash-card--metric">
        <span class="card-label">Enterprise Clients</span>
        <div class="metric-value">
          <AnimatedCounter value={200} suffix="+" />
        </div>
        <p class="metric-context">Companies trained</p>
      </div>

      <!-- CSAT -->
      <div class="dash-card dash-card--metric dash-card--highlight">
        <span class="card-label">CSAT Score</span>
        <div class="metric-value">
          <AnimatedCounter value={92} suffix="%" />
        </div>
        <p class="metric-context">Customer satisfaction</p>
        <div class="progress-bar">
          <div class="progress-fill" style="width: 92%"></div>
        </div>
      </div>

      <!-- Learners -->
      <div class="dash-card dash-card--metric">
        <span class="card-label">Learners Trained</span>
        <div class="metric-value">
          <AnimatedCounter value={200} suffix="K+" />
        </div>
        <p class="metric-context">Employees educated</p>
      </div>

      <!-- Team Size -->
      <div class="dash-card dash-card--metric">
        <span class="card-label">Team Size</span>
        <div class="metric-value">
          <AnimatedCounter value={135} />
        </div>
        <p class="metric-context">Employees in 2024</p>
      </div>
    </div>

    <!-- Role cards -->
    <div class="roles-section">
      <h3 class="section-title animate-in">Career Progression</h3>
      <div class="roles-grid">
        {roles.map((role) => (
          <div class="role-card">
            <div class="role-header">
              <div class="role-titles">
                <h4 class="role-title">{role.title}</h4>
                <span class="role-subtitle">{role.subtitle}</span>
              </div>
              <span class="role-duration">{role.duration}</span>
            </div>
            <p class="role-period">{role.period}</p>
            <ul class="role-list">
              {role.highlights.map((h) => (
                <li>
                  <span class="list-arrow">→</span>
                  {h}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Executive Skills -->
    <div class="skills-section animate-in">
      <div class="skills-columns">
        <div class="skills-column">
          <h4 class="skills-column-title">CPO Competencies</h4>
          <div class="skills-list">
            <span class="skill-pill">Product Vision</span>
            <span class="skill-pill">Product Strategy</span>
            <span class="skill-pill">Go-to-Market</span>
            <span class="skill-pill">Roadmap Management</span>
            <span class="skill-pill">Shape Up Methodology</span>
            <span class="skill-pill">User Research</span>
          </div>
        </div>
        <div class="skills-column">
          <h4 class="skills-column-title">CGO Competencies</h4>
          <div class="skills-list">
            <span class="skill-pill">Channel Strategy</span>
            <span class="skill-pill">Sales Optimization</span>
            <span class="skill-pill">Pricing & Packaging</span>
            <span class="skill-pill">Inbound Marketing</span>
            <span class="skill-pill">Revenue Operations</span>
            <span class="skill-pill">Partner Development</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Logo cloud -->
    <div class="logo-section animate-in">
      <p class="logo-label">Trusted by enterprise leaders</p>
      <LogoCloud logos={logos} />
    </div>

    <!-- Products section -->
    <div class="products-section animate-in">
      <h3 class="section-title">Products</h3>
      <div class="products-grid">
        {products.map((product) => (
          <div class="product-card">
            <div class="product-icon">
              {product.iconComponent === 'filetext' && <FileText size={32} />}
              {product.iconComponent === 'graduationcap' && <GraduationCap size={32} />}
            </div>
            <h4 class="product-name">{product.name}</h4>
            <p class="product-desc">{product.description}</p>
            <div class="product-stats">
              {product.stats.map((stat) => (
                <span class="stat-tag">{stat}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Recognition bar -->
    <div class="recognition-bar animate-in">
      {recognition.map((item) => (
        <div class="recognition-item">
          <span class="recognition-icon">
            {item.iconComponent === 'trophy' && <Trophy size={20} />}
            {item.iconComponent === 'star' && <Star size={20} />}
            {item.iconComponent === 'rocket' && <Rocket size={20} />}
          </span>
          <span class="recognition-text">{item.text}</span>
        </div>
      ))}
    </div>

  </div>

  <!-- Command Palette -->
  <CommandPalette />
</section>

<style>
  .executive-era {
    position: relative;
    min-height: 100vh;
    padding: 6rem 2rem 8rem;
    background: #000000;
    overflow: hidden;
  }

  /* Background */
  .executive-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .gradient-glow {
    position: absolute;
    top: -20%;
    left: 50%;
    width: 140%;
    height: 60%;
    transform: translateX(-50%);
    background: radial-gradient(
      ellipse 60% 50% at 50% 0%,
      rgba(0, 112, 243, 0.12),
      transparent
    );
  }

  .noise-overlay {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    opacity: 0.02;
  }

  .executive-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Keyboard hint */
  .keyboard-hint {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    padding: 0.4rem 0.75rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    font-size: 0.75rem;
    color: #666;
  }

  .keyboard-hint kbd {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    padding: 2px 6px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: #888;
  }

  .hint-text {
    color: #555;
  }

  /* Era badge */
  .era-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #0070f3;
    box-shadow: 0 0 12px rgba(0, 112, 243, 0.5);
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.1); }
  }

  .badge-text {
    display: flex;
    flex-direction: column;
  }

  .badge-year {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: #666;
    letter-spacing: 0.05em;
  }

  .badge-title {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: #0070f3;
  }

  /* Heading */
  .heading-container {
    margin-bottom: 2rem;
  }

  .executive-heading {
    font-family: 'Inter', sans-serif;
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 700;
    line-height: 0.95;
    letter-spacing: -0.04em;
    margin: 0;
  }

  .heading-line {
    display: block;
    color: #ededed;
  }

  .heading-accent {
    background: linear-gradient(135deg, #0070f3 0%, #7928ca 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Intro */
  .executive-intro {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    line-height: 1.7;
    color: #888;
    max-width: 600px;
    margin-bottom: 4rem;
    letter-spacing: -0.01em;
  }

  /* Dashboard grid */
  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 4rem;
  }

  @media (max-width: 1024px) {
    .dashboard-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }

  .dash-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }

  .dash-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .dash-card--large {
    grid-column: span 2;
    grid-row: span 2;
    padding: 2rem;
  }

  @media (max-width: 640px) {
    .dash-card--large {
      grid-column: span 1;
      grid-row: span 1;
    }
  }

  .dash-card--highlight {
    background: linear-gradient(135deg, rgba(0, 112, 243, 0.1), rgba(121, 40, 202, 0.05));
    border-color: rgba(0, 112, 243, 0.2);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .card-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    color: #888;
  }

  .status-badge {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    border-radius: 20px;
    background: rgba(0, 255, 0, 0.1);
    color: #4ade80;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #4ade80;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  .metric-value {
    font-family: 'Inter', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    color: #ededed;
    letter-spacing: -0.03em;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .dash-card--large .metric-value {
    font-size: 4rem;
  }

  .metric-value--green {
    color: #4ade80;
  }

  .metric-context {
    font-size: 0.8rem;
    color: #666;
    margin: 0;
  }

  .metric-chart {
    margin-top: auto;
    padding-top: 1.5rem;
    height: 40px;
  }

  .metric-chart svg {
    width: 100%;
    height: 100%;
  }

  .progress-bar {
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    margin-top: 1rem;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #0070f3, #7928ca);
    border-radius: 2px;
    animation: progress-grow 1.5s ease-out;
  }

  @keyframes progress-grow {
    from { width: 0; }
  }

  /* Roles section */
  .roles-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    font-weight: 500;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1.5rem 0;
  }

  .roles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .roles-grid {
      grid-template-columns: 1fr;
    }
  }

  .role-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }

  .role-card:hover {
    border-color: rgba(0, 112, 243, 0.3);
  }

  .role-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
  }

  .role-titles {
    display: flex;
    flex-direction: column;
  }

  .role-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #ededed;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .role-subtitle {
    font-size: 0.8rem;
    color: #0070f3;
  }

  .role-duration {
    font-size: 0.75rem;
    font-weight: 500;
    color: #0070f3;
    background: rgba(0, 112, 243, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .role-period {
    font-size: 0.8rem;
    color: #666;
    margin: 0 0 1rem 0;
  }

  .role-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .role-list li {
    display: flex;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: #888;
    padding: 0.25rem 0;
    line-height: 1.5;
  }

  .list-arrow {
    color: #0070f3;
    flex-shrink: 0;
  }

  /* Logo section */
  .logo-section {
    margin-bottom: 4rem;
  }

  .logo-label {
    font-size: 0.8rem;
    color: #666;
    text-align: center;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
