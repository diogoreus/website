---
/**
 * MorphingButton - A persistent CTA button that transforms its appearance
 * as the user scrolls through different eras.
 *
 * Flash Era:      [ > ENTER SITE ] - Glossy, beveled, neon glow
 * Developer Era:  $ ./view-projects  - Terminal command style
 * Executive Era:  View Work ->       - Clean, Inter font, subtle
 * AI Era:         * Explore *        - Particle border, glitch effect
 */

interface Props {
  href?: string;
  class?: string;
}

const { href = '#era-flash', class: className = '' } = Astro.props;
---

<a id="morphing-button" href={href} class={`morphing-button ${className}`}>
  <!-- Flash Era Content -->
  <span class="btn-content btn-flash">
    <span class="btn-icon">▶</span>
    <span class="btn-text">ENTER SITE</span>
  </span>

  <!-- Developer Era Content -->
  <span class="btn-content btn-developer">
    <span class="btn-prompt">$</span>
    <span class="btn-text">./view-projects</span>
    <span class="btn-cursor">_</span>
  </span>

  <!-- Executive Era Content -->
  <span class="btn-content btn-executive">
    <span class="btn-text">View Work</span>
    <span class="btn-arrow">→</span>
  </span>

  <!-- AI Era Content -->
  <span class="btn-content btn-ai">
    <span class="btn-glyph">◈</span>
    <span class="btn-text">Explore</span>
    <span class="btn-glyph">◈</span>
  </span>

  <!-- Particle border for AI era -->
  <svg class="btn-particles" viewBox="0 0 200 60" preserveAspectRatio="none">
    {Array.from({ length: 20 }).map((_, i) => (
      <circle
        class="particle"
        cx={10 + (i * 10)}
        cy={Math.random() > 0.5 ? 5 : 55}
        r="2"
        fill="#a855f7"
        style={`animation-delay: ${i * 0.1}s`}
      />
    ))}
  </svg>

  <!-- Glow effect -->
  <div class="btn-glow"></div>
</a>

<style>
  .morphing-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    min-width: 200px;
    text-decoration: none;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  /* Default state / Flash Era */
  .morphing-button {
    background: linear-gradient(180deg, rgba(0, 255, 255, 0.2) 0%, rgba(255, 0, 255, 0.2) 100%);
    border: 2px solid transparent;
    border-image: linear-gradient(135deg, #00ffff, #ff00ff) 1;
    border-radius: 12px;
    box-shadow:
      0 0 20px rgba(0, 255, 255, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      inset 0 -1px 0 rgba(0, 0, 0, 0.2);
  }

  .morphing-button:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 30px rgba(0, 255, 255, 0.5),
      0 0 60px rgba(255, 0, 255, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  /* Button content containers */
  .btn-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: absolute;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s ease;
    white-space: nowrap;
  }

  /* Flash era visible by default */
  .btn-flash {
    opacity: 1;
    transform: translateY(0);
    font-family: 'Inter', Arial, sans-serif;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.15em;
    color: #ffffff;
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }

  .btn-flash .btn-icon {
    color: #00ffff;
    filter: drop-shadow(0 0 5px #00ffff);
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { filter: drop-shadow(0 0 5px #00ffff); }
    50% { filter: drop-shadow(0 0 15px #00ffff); }
  }

  /* Developer era content */
  .btn-developer {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    color: #c9d1d9;
  }

  .btn-developer .btn-prompt {
    color: #3fb950;
  }

  .btn-developer .btn-cursor {
    color: #58a6ff;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Executive era content */
  .btn-executive {
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: #ededed;
    letter-spacing: -0.01em;
  }

  .btn-executive .btn-arrow {
    transition: transform 0.3s ease;
  }

  .morphing-button:hover .btn-executive .btn-arrow {
    transform: translateX(4px);
  }

  /* AI era content */
  .btn-ai {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: #f0f0f0;
  }

  .btn-ai .btn-glyph {
    color: #a855f7;
    animation: glitch-rotate 3s ease-in-out infinite;
  }

  @keyframes glitch-rotate {
    0%, 90%, 100% { transform: rotate(0deg); }
    93% { transform: rotate(5deg); }
    96% { transform: rotate(-5deg); }
  }

  /* Particle border */
  .btn-particles {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .btn-particles .particle {
    animation: particle-float 2s ease-in-out infinite alternate;
  }

  @keyframes particle-float {
    0% { transform: translateY(0) scale(1); opacity: 0.3; }
    100% { transform: translateY(-3px) scale(1.2); opacity: 1; }
  }

  /* Glow effect */
  .btn-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #00ffff, #ff00ff);
    opacity: 0.3;
    filter: blur(15px);
    z-index: -1;
    transition: opacity 0.5s ease;
  }

  .morphing-button:hover .btn-glow {
    opacity: 0.5;
  }

  /* Era-specific button states */

  /* Developer Era */
  :global([data-morph-era="developer"]) .morphing-button {
    background: #161b22;
    border: 1px solid #30363d;
    border-image: none;
    border-radius: 6px;
    box-shadow: none;
  }

  :global([data-morph-era="developer"]) .morphing-button:hover {
    border-color: #58a6ff;
    box-shadow: 0 0 15px rgba(88, 166, 255, 0.2);
  }

  :global([data-morph-era="developer"]) .btn-flash {
    opacity: 0;
    transform: translateY(-10px);
  }

  :global([data-morph-era="developer"]) .btn-developer {
    opacity: 1;
    transform: translateY(0);
  }

  :global([data-morph-era="developer"]) .btn-glow {
    background: #58a6ff;
    opacity: 0;
  }

  /* Executive Era */
  :global([data-morph-era="executive"]) .morphing-button {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-image: none;
    border-radius: 8px;
    box-shadow: none;
  }

  :global([data-morph-era="executive"]) .morphing-button:hover {
    background: rgba(255, 255, 255, 0.03);
    border-color: rgba(0, 112, 243, 0.5);
    box-shadow: none;
  }

  :global([data-morph-era="executive"]) .btn-flash,
  :global([data-morph-era="executive"]) .btn-developer {
    opacity: 0;
    transform: translateY(-10px);
  }

  :global([data-morph-era="executive"]) .btn-executive {
    opacity: 1;
    transform: translateY(0);
  }

  :global([data-morph-era="executive"]) .btn-glow {
    opacity: 0;
  }

  /* AI Era */
  :global([data-morph-era="ai"]) .morphing-button {
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-image: none;
    border-radius: 8px;
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);
  }

  :global([data-morph-era="ai"]) .morphing-button:hover {
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.4);
  }

  :global([data-morph-era="ai"]) .btn-flash,
  :global([data-morph-era="ai"]) .btn-developer,
  :global([data-morph-era="ai"]) .btn-executive {
    opacity: 0;
    transform: translateY(-10px);
  }

  :global([data-morph-era="ai"]) .btn-ai {
    opacity: 1;
    transform: translateY(0);
  }

  :global([data-morph-era="ai"]) .btn-particles {
    opacity: 1;
  }

  :global([data-morph-era="ai"]) .btn-glow {
    background: linear-gradient(135deg, #a855f7, #22d3ee);
    opacity: 0.2;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .morphing-button {
      padding: 0.75rem 1.5rem;
      min-width: 160px;
    }

    .btn-flash,
    .btn-developer,
    .btn-executive,
    .btn-ai {
      font-size: 0.8rem;
    }
  }
</style>
